
<h2>Edit Post</h2>
<hr>
<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
   <%= form.label :image, class: "font-weight-bold" %>
   
    <% if @post.image.attached? %>
      <p>Imagen actual:</p>
      <%= image_tag @post.image, class: "img-thumbnail mb-2", size: "200x200" %>
    <% end %>
    
 <div class="form-group">
  <%= form.label :description, class: "font-weight-bold" %>
  <%= form.text_area :description, class: "form-control", rows: 4 %>
</div>


  <div class="form-group">
    <%= form.file_field :image, class: "form-control mb-2" %>
    </div>

  <div class="text-center">
    <%= form.submit "Update Post", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
